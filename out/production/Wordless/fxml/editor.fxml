<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import view.container.Article?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.EditorController"
            prefHeight="700.0" prefWidth="1000.0" stylesheets="@/css/editor.css">
    <top>
        <VBox>
            <TabPane>
                <Tab closable="false" text="File">
                    <HBox styleClass="tab-content">
                        <Button text="New" fx:id="newFileBtn">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/new.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button text="Save" fx:id="saveFileBtn">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40" styleClass="normal-icon">
                                    <Image url="/icons/save.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button text="Save As..." fx:id="saveFileAsBtn">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/save.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button text="Open" fx:id="openFileBtn">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/open.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <MenuButton text="Export" fx:id="exportToBtn">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/exportto.png"/>
                                </ImageView>
                            </graphic>
                            <items>
                                <MenuItem text="to HTML"/>
                                <MenuItem text="to PDF"/>
                            </items>
                        </MenuButton>

                        <Button text="View" fx:id="viewInBrowserBtn">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/open_in_browser.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                    </HBox>
                </Tab>

                <Tab closable="false" text="Edit">
                    <HBox styleClass="tab-content">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>

                        <MenuButton text="Section">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/semantics/section_120.png"/>
                                </ImageView>
                            </graphic>
                            <items>
                                <MenuItem text="Seciton (⌘ + 1)"/>
                                <MenuItem text="Subsection (⌘ + 2)"/>
                                <MenuItem text="Subsubsection (⌘ + 3)"/>
                            </items>
                        </MenuButton>

                        <Button text="Quote">
                            <tooltip>
                                <Tooltip text="Quote text"/>
                            </tooltip>
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/semantics/quote_80.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button text="Image">
                            <tooltip>
                                <Tooltip text="Add image"/>
                            </tooltip>
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/semantics/image_80.png"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <MenuButton text="List">
                            <graphic>
                                <ImageView fitWidth="40" fitHeight="40">
                                    <Image url="/icons/semantics/list_80.png"/>
                                </ImageView>
                            </graphic>
                            <items>
                                <MenuItem text="Ordered List">
                                    <graphic>
                                        <ImageView fitWidth="20" fitHeight="20">
                                            <Image url="/icons/semantics/ordered_list_20.png"/>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                                <MenuItem text="Unordered List">
                                    <graphic>
                                        <ImageView fitWidth="20" fitHeight="20">
                                            <Image url="/icons/semantics/unordered_list_20.png"/>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                            </items>
                        </MenuButton>

                    </HBox>
                </Tab>

                <Tab closable="false" text="Style">

                </Tab>
            </TabPane>

            <!-- Suggestion bar-->
            <ToolBar
                    style="-fx-background-color: rgba(0,0,0,0.1);-fx-border-color: rgba(0,0,0,0.2);-fx-border-width: 1 0">
                <padding>
                    <Insets bottom="2.0" left="5.0" right="2.0" top="2.0"/>
                </padding>
                <Button text="Good"/>
                <Label text="Current Structure" fx:id="currentStructure"/>
                <Button text="Title" fx:id="intelligentSuggest"/>
            </ToolBar>

        </VBox>
    </top>


    <center>
        <ScrollPane focusTraversable="false" fx:id="scrollContainer" styleClass="scroll-pane" fitToWidth="true">
            <HBox alignment="CENTER">
            <Article fx:id="editPane" focusTraversable="false"/>
            </HBox>
        </ScrollPane>

    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT"
              spacing="30"
              style="-fx-border-color: rgba(0,0,0,0.3);-fx-border-width:1 0;-fx-background-color: linear-gradient(to right, rgba(0,0,0,0.1), rgba(0,0,0,0.05));">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <Label text="Group 35">
            </Label>
        </HBox>
    </bottom>


</BorderPane>
